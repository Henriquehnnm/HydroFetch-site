---
export interface Props {
  title: string;
  description?: string;
  image?: string;
}
const {
  title,
  description = "A fast, beautiful, and lightweight system information tool written exclusively for the Fish shell.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />

    <meta name="generator" content={Astro.generator} />
    <title>HydroFetch - {title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    scroll-behavior: smooth;
  }
</style>
